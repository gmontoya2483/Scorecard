<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--FirebasiUI customization -->
    <style name="LogInTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>


    <!--Floating button Style -->
    <style name="Fab_Button">
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">@dimen/fab_press_translation_z</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:stateListAnimator">@anim/fab_state_anim</item>

    </style>


    <!--Golf Field screen -->
    <style name="GolfFieldGolfHoleNumber" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/font_PrimaryText_87</item>
    </style>


    <style name="GolfFieldGolfHoleLength" parent="Base.V12.Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:hint">@string/hint_length</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/font_PrimaryText_87</item>
    </style>

    <style name="GolfFieldGolfHoleLengthUnit" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:textColor">@color/font_SecondaryText_54</item>

    </style>

    <style name="GolfFieldGolfHolePar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Scorecard -->
    <style name="ScorecardGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount">5</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ScorecardGridSpace">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ScorecardGridText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>


    </style>

    <style name="ScorecardGridText.Hole">
        <item name="android:textSize">18sp</item>

    </style>

    <style name="ScorecardGridText.score">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
    </style>


</resources>
