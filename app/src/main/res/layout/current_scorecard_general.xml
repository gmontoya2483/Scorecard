<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <android.support.v4.widget.Space
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent" />





            <TextView
                android:id="@+id/current_scorecard_gf_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Club de Campo Aranzazu"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/current_scorecard_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SUN 23 JUL 2017"
                android:layout_margin="8dp"/>

            <android.support.v4.widget.Space
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/current_scorecard_total_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1516 Yards"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TOTAL" />

            <TextView
                android:id="@+id/current_scorecard_total_par_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="PAR 60" />

            <android.support.v4.widget.Space
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/current_scorecard_out_length_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1516 Yards"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="OUT" />

                    <TextView
                        android:id="@+id/current_scorecard_out_par_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="PAR 30" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/current_scorecard_in_length_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="1516 Yards"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="OUT" />

                    <TextView
                        android:id="@+id/current_scorecard_in_par_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="PAR 30" />


                </LinearLayout>

            </LinearLayout>





            <android.support.v4.widget.Space
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent" />






        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>