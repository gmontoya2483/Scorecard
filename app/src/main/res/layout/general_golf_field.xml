<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/golf_field_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/golf_field_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/golf_field_name_hint"
            android:inputType="text"
            android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/golf_field_card_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

                <android.support.v4.widget.Space
                    android:layout_height="24dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/golf_field_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@drawable/ic_action_favorite_color" />


            </GridLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:columnCount="3">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnSpan="3"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/golf_field_total_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_view_fake_total_length"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_total_label"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/golf_field_total_par"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_view_fake_total_par"
                        android:textSize="20sp" />
                </LinearLayout>


                <android.support.v4.widget.Space
                    android:layout_height="24dp"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_horizontal" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/golf_field_out_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_view_fake_in_out_length"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_out_label"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/golf_field_out_par"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_view_fake_in_out_par"
                        android:textSize="16sp" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_rowWeight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/golf_field_in_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_view_fake_in_out_length"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_in_label"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/golf_field_in_par"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/golf_field_view_fake_in_out_par"
                        android:textSize="16sp" />

                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_height="24dp"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center_horizontal" />

            </GridLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>